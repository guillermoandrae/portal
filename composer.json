{
    "name": "hrphp/portal",
    "description": "Portal for the Hampton Roads PHP Meetup",
    "license": "MIT",
    "keywords": [
        "framework",
        "zf2"
    ],
    "homepage": "http://framework.zend.com/",
    "require": {
        "php": ">=5.4",
        "zendframework/zendframework": "~2.0",
        "phing/phing": "@stable"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "~1.5",
        "phpunit/phpunit": "~4.0"
    },
    "autoload-dev": {
      "psr-0": {
        "ApplicationTest\\": "tests/"
      }
    },
    "extra": {
      "heroku": {
        "framework": "zf2",
        "document-root": "public",
        "index-document": "index.php"
      }
   }  
}
